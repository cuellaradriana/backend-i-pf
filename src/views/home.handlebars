<main>
    <h2>Productos</h2>
    <div id='renderProducts'>
        {{#each payload}}
            <a href='/products/{{_id}}'>
                <div id={{_id}}>
                    <h3>{{title}}</h3>
                    <p>{{description}}</p>
                    <p>$ {{price}}</p>
                    <img src='{{getThumbnail thumbnails 0}}' alt='{{title}}' />
                </div>
            </a>
        {{/each}}
    </div>
    <div id='handlePage'>
        <a href='/?page=1'>Primera pág</a>
        {{#if hasPrevPage}}
            <a href='{{prevLink}}'> {{prevPage}} </a>
        {{else}}
            <a href='{{prevLink}}' class='disabled'> 1 </a>
        {{/if}}
        <p id='currentPage'> <span>{{currentPage}}</span> </p>
        {{#if hasNextPage}}
            <a href='{{nextLink}}'> {{nextPage}} </a>
        {{else}}
            <a href='{{nextLink}}' class='disabled'> {{totalPages}} </a>
        {{/if}}
        <a href='/?page={{totalPages}}'>Última pág</a>
    </div>
</main>